# =============================================================================
# Docker Environment Variables
# Copy this file to .env.docker and configure for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Video Editor"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=https://your-domain.com

# Coolify will set this automatically
# APP_PORT=8000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stderr
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=videoeditor
DB_USERNAME=videoeditor
DB_PASSWORD=your-secure-password

# External port for local access (not used in production)
DB_EXTERNAL_PORT=5432

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# External port for local access (not used in production)
REDIS_EXTERNAL_PORT=6379

# -----------------------------------------------------------------------------
# Cache & Session
# -----------------------------------------------------------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis

# -----------------------------------------------------------------------------
# Queue
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=redis
QUEUE_NAME=default,renders,generations
QUEUE_TIMEOUT=300
QUEUE_TRIES=3
QUEUE_MAX_JOBS=1000
QUEUE_MEMORY=256

# Number of queue workers (production only)
QUEUE_WORKERS=2

# -----------------------------------------------------------------------------
# Services
# -----------------------------------------------------------------------------
FAL_API_KEY=your-fal-api-key

# -----------------------------------------------------------------------------
# Docker / Coolify
# -----------------------------------------------------------------------------
# Container mode: app, queue, scheduler, horizon
CONTAINER_MODE=app

# Auto-run migrations on container start
AUTO_MIGRATE=false

# Docker registry (leave empty for local builds)
REGISTRY=
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# PHP Settings
# -----------------------------------------------------------------------------
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# Queue worker PHP settings (higher for video processing)
QUEUE_PHP_MEMORY_LIMIT=512M
QUEUE_PHP_MAX_EXECUTION_TIME=600
